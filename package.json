{
  "name": "strapi-test-assignment",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:strapi dev:next",
    "dev:strapi": "npm --workspace apps/strapi-app run develop",
    "dev:next": "npm --workspace apps/next-app run dev",
    "start": "npm-run-all --parallel start:strapi start:next",
    "start:strapi": "npm --workspace apps/strapi-app run start",
    "start:next": "npm --workspace apps/next-app run start",
    "build": "npm --workspaces run build",
    "build:strapi": "npm --workspace apps/strapi-app run build",
    "build:next": "npm --workspace apps/next-app run build",
    "lint": "npm --workspaces run lint",
    "lint:strapi": "npm --workspace apps/strapi-app run lint",
    "lint:next": "npm --workspace apps/next-app run lint",
    "lint:fix": "npm --workspaces run lint:fix",
    "lint:fix:strapi": "npm --workspace apps/strapi-app run lint:fix",
    "lint:fix:next": "npm --workspace apps/next-app run lint:fix",
    "format": "npm --workspaces run format",
    "format:strapi": "npm --workspace apps/strapi-app run format",
    "format:next": "npm --workspace apps/next-app run format",
    "clean": "npm --workspaces run clean",
    "clean:strapi": "npm --workspace apps/strapi-app run clean",
    "clean:next": "npm --workspace apps/next-app run clean"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8",
    "eslint": "^9",
    "eslint-config-prettier": "^10",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3",
    "typescript": "^5"
  }
}
